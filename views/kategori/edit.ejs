<%- include(`../partials/_head`) %>
    <div class="container">
        <%- include(`../partials/_message`) %>
        <div class="row">
            <div class="col">
                <a href="/kategori" class="btn btn-sm btn-danger">Kembali</a>
                <form action="/kategori/update/<%= id %>" method="POST">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama kategori</label>
                        <input type="text" class="form-controll" name="nama_kategori" value="<%= nama_kategori %>" required>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include(`../partials/_foot`) %>